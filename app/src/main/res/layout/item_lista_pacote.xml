<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_lista_pacote_img"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/sao_paulo_sp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_liosta_pacote_nome_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/item_lista_pacote_img"
        app:layout_constraintEnd_toEndOf="@id/item_lista_pacote_img"
        app:layout_constraintTop_toTopOf="@id/item_lista_pacote_img"
        app:layout_constraintBottom_toBottomOf="@id/item_lista_pacote_img"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:text="SÃ£o Paulo"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:padding="6dp"
        android:background="@android:drawable/screen_background_dark_transparent"/>

    <View
        android:id="@+id/item_lista_pacote_divisor"
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_lista_pacote_img"
        android:background="@android:color/holo_orange_dark"/>

    <TextView
        android:id="@+id/item_lista_pacote_qtd_dias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_lista_pacote_divisor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_margin="8dp"
        android:text="2 dias"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_liosta_pacote_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/item_lista_pacote_qtd_dias"
        app:layout_constraintTop_toBottomOf="@id/item_lista_pacote_qtd_dias"
        android:text="R$ 243,00"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_dark" />

</android.support.constraint.ConstraintLayout>